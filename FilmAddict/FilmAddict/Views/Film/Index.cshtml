@model IEnumerable<FilmAddict.Models.FilmModel>

@{
    ViewBag.Title = "Index";
}
<br />


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Director)
        </th>
        <!--
        <th>
            @Html.DisplayNameFor(model => model.Trailer)
        </th>
        -->
        <th>
            @Html.DisplayNameFor(model => model.Synopsis)
        </th>



        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director)
            </td>
            <!--
            <td>
                @Html.DisplayFor(modelItem => item.Trailer)
            </td>
            -->
            <td>
                @Html.DisplayFor(modelItem => item.Synopsis)
            </td>

            <td>
                <button class="btn btn-danger">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                </button>
                <button class="btn btn-danger">
                @Html.ActionLink("Display", "Display", new { id = item.Id })
                </button>
                <button class="btn btn-danger">
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </button>
            </td>
        </tr>
    }

</table>

<div style="text-align: center;">
    <button class="btn btn-danger" >
        @Html.ActionLink("Create New", "Create")
    </button>
</div>